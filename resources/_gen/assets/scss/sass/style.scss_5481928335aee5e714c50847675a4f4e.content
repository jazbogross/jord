body{height:auto}#word-container{display:flex;flex-wrap:wrap;width:100vw;height:100vh}.word{position:relative;margin:25px;max-width:100vw;word-break:break-all;text-align:right}.word span{cursor:pointer}.comment-form{padding-top:10px;font-size:20px}#formContainer{position:fixed;display:flex;align-items:center;justify-content:center;flex-direction:column;left:0;top:0;width:100vw;height:100vh;backdrop-filter:blur(15px);-webkit-backdrop-filter:blur(15px)}#wordForm{position:flex;font-size:25px;flex-direction:column;display:block;padding:50px;text-align:center}#wordForm div{margin:25px}#wordForm input{font-size:50px;font-size:36px;text-align:center;text-justify:center;border:none;outline:none;background-color:transparent}#wordForm button{padding:10px;font-size:20px;background-color:#fff;color:#000;border:1px solid #000}#wordForm button:hover{background-color:#000;color:#fff}#wordAgain{display:block;position:fixed;text-decoration:underline;margin:25px;padding:10px;right:0;top:0;cursor:pointer;border:1px solid #000}.comments-div{display:none;flex-direction:column;align-items:flex-start;margin-top:25px;max-width:300px}.comment{font-style:italic}