body{height:auto}#word-container{display:flex;flex-wrap:wrap;width:100vw;height:100vh;overflow:auto}.word{position:relative;margin:25px}#formContainer{position:fixed;display:flex;align-items:center;justify-content:center;flex-direction:column;left:0;top:0;width:100vw;height:100vh;backdrop-filter:blur(15px)}#wordForm{position:flex;font-size:25px;flex-direction:column;display:block;padding:50px;text-align:center}#wordForm div{margin:25px}#wordForm input{font-size:50px;font-size:36px;text-align:center;text-justify:center;border:none;outline:none;background-color:transparent}#wordForm button{border-radius:25px;padding:10px;font-size:20px;background-color:#fff;color:#000}#wordForm button:hover{background-color:#000;color:#fff}